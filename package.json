{
  "name": "capraconsulting-nettsiden",
  "private": true,
  "sideEffects": false,
  "scripts": {
    "set-cloudflare-config": "cp remix.config.cloudflare.js remix.config.js",
    "set-netlify-config": "cp remix.config.netlify.js remix.config.js",
    "build-cloudflare": "npm-run-all set-cloudflare-config build:*",
    "build": "npm-run-all set-netlify-config build:*",
    "build:css": "npm run generate:css -- --minify",
    "build:remix": "remix build",
    "build:ladle": "ladle build",
    "dev": "npm run set-netlify-config && run-p dev:*",
    "dev:css": "npm run generate:css -- --watch",
    "dev:remix": "remix dev",
    "dev:ladle": "ladle serve",
    "dev-cloudflare": "npm run set-cloudflare-config && run-p dev:css dev-cloudflare:*",
    "dev-cloudflare:remix": "remix watch",
    "dev-cloudflare:wrangler": "cross-env NODE_ENV=development wrangler pages dev ./public",
    "generate:css": "npx tailwindcss -o ./app/tailwind.css",
    "start": "cross-env NODE_ENV=production netlify dev",
    "start-cloudflare": "cross-env NODE_ENV=production npm run dev:wrangler",
    "lint": "eslint \"./{app,studio}/**/*.{ts,tsx,js,jsx}\"",
    "lint:fix": "npm run lint -- --fix",
    "sanity-codegen": "sanity-codegen"
  },
  "prettier": {
    "trailingComma": "all"
  },
  "dependencies": {
    "@netlify/functions": "1.3.0",
    "@remix-run/cloudflare": "1.7.2",
    "@remix-run/netlify": "1.7.2",
    "@remix-run/node": "1.7.2",
    "@remix-run/react": "1.7.2",
    "@remix-run/server-runtime": "1.7.2",
    "@sanity/image-url": "^1.0.1",
    "cross-env": "7.0.3",
    "isbot": "3.6.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "sanity-codegen": "0.9.8"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "3.16.0",
    "@ladle/react": "2.4.4",
    "@remix-run/dev": "1.7.2",
    "@remix-run/eslint-config": "1.7.2",
    "@remix-run/serve": "1.7.2",
    "@types/react": "18.0.21",
    "@types/react-dom": "18.0.6",
    "eslint": "8.25.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-import-resolver-typescript": "3.5.1",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-simple-import-sort": "8.0.0",
    "npm-run-all": "4.1.5",
    "prettier": "2.7.1",
    "tailwindcss": "3.1.8",
    "typescript": "4.8.4",
    "wrangler": "2.1.11"
  },
  "engines": {
    "node": ">=16"
  }
}
