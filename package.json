{
  "name": "remix-template-netlify",
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "run-s build:*",
    "build:css": "npm run generate:css -- --minify",
    "build:remix": "remix build",
    "build:ladle": "ladle build",
    "dev": "run-p dev:*",
    "dev:css": "npm run generate:css -- --watch",
    "dev:remix": "cross-env NODE_ENV=development netlify dev",
    "dev:ladle": "ladle serve",
    "generate:css": "npx tailwindcss -o ./app/tailwind.css",
    "start": "cross-env NODE_ENV=production netlify dev",
    "lint": "eslint \"./{app,studio}/**/*.{ts,tsx,js,jsx}\"",
    "lint:fix": "npm run lint -- --fix",
    "sanity-codegen": "sanity-codegen"
  },
  "prettier": {
    "trailingComma": "all"
  },
  "dependencies": {
    "@netlify/functions": "1.2.0",
    "@remix-run/netlify": "1.7.0",
    "@remix-run/node": "1.7.0",
    "@remix-run/react": "1.7.0",
    "@remix-run/server-runtime": "1.7.0",
    "@sanity/image-url": "^1.0.1",
    "cross-env": "7.0.3",
    "isbot": "3.5.2",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "sanity-codegen": "0.9.8"
  },
  "devDependencies": {
    "@ladle/react": "2.4.2",
    "@remix-run/dev": "1.7.0",
    "@remix-run/eslint-config": "1.7.0",
    "@types/react": "18.0.18",
    "@types/react-dom": "18.0.6",
    "eslint": "8.23.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-import-resolver-typescript": "3.5.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-simple-import-sort": "7.0.0",
    "npm-run-all": "4.1.5",
    "prettier": "2.7.1",
    "tailwindcss": "3.1.8",
    "typescript": "4.8.2"
  },
  "engines": {
    "node": ">=18"
  }
}
